<resources>
    <!-- Base application theme. -->
    <style name="Theme.GeckoMemory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/salmon</item>
        <item name="colorPrimaryVariant">@color/salmon_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/salmon</item>
        <item name="colorSecondaryVariant">@color/salmon_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SalmonOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/salmon</item>
        <item name="android:textColor">@color/border</item>
    </style>
</resources>